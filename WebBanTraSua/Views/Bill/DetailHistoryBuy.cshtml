@model IEnumerable<WebBanTraSua.Models.EF.ChiTietHoaDon>

@{
    ViewBag.Title = "Chi tiết Lịch sử mua hàng";
    Layout = "~/Views/Shared/User/_Layout.cshtml";
}

<div class="row" style="padding-left:200px;">
    <div class="col-lg-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Danh sách Chi tiết Lịch sử mua hàng</h2>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <hr />
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Hình ảnh</th>
                                <th>Tên sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Giá tiền</th>
                                <th>Đơn vị tính</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        @{ var i = 1;}
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row-@item.maHoaDon">
                                    <td>@i.ToString()</td>
                                    <td> <img src="~/Content/assets/img/anh/@item.SanPham.hinhAnh" alt="ảnh" width="100" /></td>
                                    <td>@item.SanPham.tenSanPham</td>
                                    <td>@item.soLuong</td>
                                    <td>@item.SanPham.giaBan</td>
                                    <td>@item.SanPham.dvt</td>
                                    <td>@item.thanhTien</td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
