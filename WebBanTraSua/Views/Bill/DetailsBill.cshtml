@model IEnumerable<WebBanTraSua.Models.EF.ChiTietHoaDon>

@{
    ViewBag.Title = "Chi Tiết Hóa Đơn";
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
}

@section header {
    Chi Tiết Hóa Đơn
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách Chi Tiết Hóa Đơn
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <hr />
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Hình ảnh</th>
                                <th>Tên sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Giá tiền</th>
                                <th>Đơn vị tính</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        @{ var i = 1;}
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row-@item.maHoaDon">
                                    <td>@i.ToString()</td>
                                    <td> <img src="~/Content/assets/img/anh/@item.SanPham.hinhAnh" alt="ảnh" width="100" /></td>
                                    <td>@item.SanPham.tenSanPham</td>
                                    <td>@item.soLuong</td>
                                    <td>@String.Format("{0:0,0}", item.SanPham.giaBan)<span>₫</span></td>
                                    <td>@item.SanPham.dvt</td>
                                    <td>@String.Format("{0:0,0}", item.thanhTien)<span>₫</span></td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
                <a class="btn btn-success" href="~/Bill/ListBill"><i class="fa fa-caret-left" style="font-size:15px;"></i> Quay lại</a>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
