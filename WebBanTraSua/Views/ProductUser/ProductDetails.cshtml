@model WebBanTraSua.Models.EF.SanPham

@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/User/_Layout.cshtml";
    var categorys = (List<WebBanTraSua.Models.EF.LoaiSanPham>)ViewBag.Categorys;
    var ListProductsRelated = (List<WebBanTraSua.Models.EF.SanPham>)ViewBag.ListProductsRelated;
}

<!-- Breadcrumb Start -->
<div class="breadcrumb-wrap">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/trang-chu">TRANG CHỦ</a></li>
            <li class="breadcrumb-item"><a href="/tat-ca-san-pham">SẢN PHẨM</a></li>
            <li class="breadcrumb-item active">DANH SÁCH SẢN PHẨM</li>
        </ul>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Product Detail Start -->
<div class="product-detail">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="product-detail-top">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <div class="product-slider-single normal-slider">
                                <img src="~/Content/assets/img/anh/@Model.hinhAnh" alt="@Model.tenSanPham">
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="product-content">
                                <div class="title">
                                    <h2>@Model.tenSanPham</h2>
                                </div>
                                <div class="ratting">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="price">
                                    <h4>Price:</h4>
                                    <p>@Model.giaBan₫</p>
                                </div>
                                <div class="quantity">
                                    <h4>Quantity:</h4>
                                    <div class="qty">
                                        <button class="btn-minus"><i class="fa fa-minus"></i></button>
                                        <input type="text" value="1">
                                        <button class="btn-plus"><i class="fa fa-plus"></i></button>
                                    </div>
                                </div>
                                <div class="title">
                                    <h2>@Model.gioiThieuSanPham</h2>
                                </div>
                                <div class="action">
                                    <a class="btn" href="/them-gio-hang?maSanPham=@Model.maSanPham&soLuong=1"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ</a>
                                    <a class="btn" href="#"><i class="fa fa-shopping-bag"></i>Mua Ngay</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="product">
                    <div class="section-header">
                        <h1>Sản Phẩm Liên Quan</h1>
                    </div>

                    <div class="row align-items-center product-slider product-slider-3">
                        @foreach (var item in ListProductsRelated)
                        {
                            <div class="col-lg-3">
                                <div class="product-item">
                                    <div class="product-image">
                                        <a href="/chi-tiet-san-pham/@item.maSanPham">
                                            <img src="~/Content/assets/img/anh/@item.hinhAnh" alt="@item.tenSanPham">
                                        </a>
                                        <div class="product-action">
                                            <a href="/them-gio-hang?maSanPham=@item.maSanPham&soLuong=1"><i class="fa fa-cart-plus"></i></a>
                                            <a href="/chi-tiet-san-pham/@item.maSanPham"><i class="fa fa-search"></i></a>
                                        </div>
                                    </div>
                                    <div class="product-title">
                                        <a href="#">@item.tenSanPham</a>
                                        <div class="ratting">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </div>
                                    </div>
                                    <div class="product-price">
                                        <h3>@item.giaBan<span>₫</span></h3>
                                        <a class="btn" href="/them-gio-hang?maSanPham=@item.maSanPham&soLuong=1"><i class="fa fa-shopping-cart"></i>Mua Ngay</a>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>

            <!-- Side Bar Start -->
            <div class="col-lg-4 sidebar">
                <div class="sidebar-widget category">
                    <h2 class="title">Loại Sản Phẩm</h2>
                    <nav class="navbar bg-light">
                        <ul class="navbar-nav">
                            @foreach (var item in categorys)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="/loai-san-pham/@item.maLoaiSanPham"> <i class="fa fa-plus-square"></i>@item.tenLoaiSanPham</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>

                <div class="sidebar-widget widget-slider">
                    <div class="sidebar-slider normal-slider">
                        @foreach (var item in ListProductsRelated)
                        {
                            <div class="col-lg-3">
                                <div class="product-item">
                                    <div class="product-image">
                                        <a href="/chi-tiet-san-pham/@item.maSanPham">
                                            <img src="~/Content/assets/img/anh/@item.hinhAnh" alt="@item.tenSanPham">
                                        </a>
                                        <div class="product-action">
                                            <a href="/them-gio-hang?maSanPham=@item.maSanPham&soLuong=1"><i class="fa fa-cart-plus"></i></a>
                                            <a href="/chi-tiet-san-pham/@item.maSanPham"><i class="fa fa-search"></i></a>
                                        </div>
                                    </div>
                                    <div class="product-title">
                                        <a href="#">@item.tenSanPham</a>
                                        <div class="ratting">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </div>
                                    </div>
                                    <div class="product-price">
                                        <h3>@item.giaBan<span>đ</span></h3>
                                        <a class="btn" href="/them-gio-hang?maSanPham=@item.maSanPham&soLuong=1"><i class="fa fa-shopping-cart"></i>Mua Ngay</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- Side Bar End -->
        </div>
    </div>
</div>
<!-- Product Detail End -->
<!-- Brand Start -->
<div class="brand">
    <div class="container-fluid">
        <div class="brand-slider">
            <div class="brand-item"><img src="~/Content/assets/img/brand-1.png" alt=""></div>
            <div class="brand-item"><img src="~/Content/assets/img/brand-2.png" alt=""></div>
            <div class="brand-item"><img src="~/Content/assets/img/brand-3.png" alt=""></div>
            <div class="brand-item"><img src="~/Content/assets/img/brand-4.png" alt=""></div>
            <div class="brand-item"><img src="~/Content/assets/img/brand-5.png" alt=""></div>
            <div class="brand-item"><img src="~/Content/assets/img/brand-6.png" alt=""></div>
        </div>
    </div>
</div>
<!-- Brand End -->