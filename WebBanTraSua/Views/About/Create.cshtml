@model WebBanTraSua.Models.EF.GioiThieu

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
}

@section header {
    Thêm Giới Thiệu
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Nhập Giới Thiệu
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">

                        @using (Html.BeginForm("Create", "About", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()


                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(model => model.noiDung, htmlAttributes: new { @class = "control-label col-md-3" })
                                <textarea cols="160" data-val="true" data-val-length="Nội dung phải có trên 100 ký tự" data-val-length-max="1000000" data-val-length-min="100" data-val-required="Không được để trống!" htmlattributes="{ class = form-control }" id="noiDung" name="noiDung" rows="20"></textarea>
                                @Html.ValidationMessageFor(model => model.noiDung, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Thêm" class="btn btn-default" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<a class="btn btn-success" href="~/About/ListAbout"><i class="fa fa-caret-left" style="font-size:15px;"></i> Quay lại</a>